@model LoginViewModel

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Email address</label>
        <input asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <input asp-for ="Password" class="form-control" id="exampleInputPassword1">
    </div>

    <div class="mb-3 form-check">
        <div class="checkbox">
            <label asp-for="RememberMe" class="form-check-label" for="exampleCheck1">Remember me</label>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>