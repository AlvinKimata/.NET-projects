@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityUser>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "List Users";
}

@if (Model.Any())
{
    <a asp-action="Create" asp-controller="Account"
   class="btn btn-primary mb-3" style="width: auto">Add a new user</a>

    <div class="card-deck">
        @foreach (var user in Model)
        {
            <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                <div class="card-header">
                    <h3>@user.UserName</h3>
                </div>

                <div class="card-footer text-center d-flex">
                    <a asp-controller="account" asp-action="details" asp-route-id="@user.Id"
               class="btn btn-primary m-1">View</a>
                    <a asp-action="edit" asp-controller="administration"
               asp-route-id="@user.Id" class="btn btn-primary  m-1">Edit</a>
                    <a href="#" class="btn btn-danger  m-1">Delete</a>
                </div>
            </div>
        }
    </div>
}
else
{
    <a asp-action="Create" asp-controller="Account"
   class="btn btn-primary mb-3" style="width: auto">Add a new user</a>
}


